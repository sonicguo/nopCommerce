@model IList<ProductOverviewModel>
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.NewProducts").Text);
}
@using Nop.Web.Models.Catalog;
<div class="page recently-added-products-page">
    <div class="page-title">

        <h3><a href="@Url.RouteUrl("NewProductsRSS")" class="link-rss" title="@T("Products.NewProducts.RSS.Hint")"><i class="fa fa-feed"></i></a> @T("Products.NewProducts")</h3>
    </div>
    <div class="page-body">
        @if (Model.Count > 0)
        {
            <div class="product-grid">
                <div class="item-grid">
                    @{
                        var index = 0;
                    }
                    @foreach (var product in Model)
                    {
                        index++;
                        <div class="item-box col-md-4">
                            @Html.Partial("_ProductBox", product)
                        </div>
                        if (index%3 == 0)
                        {
                            <div class="clearfix hidden-md hidden-sm hidden-xs"></div>
                        }
                        else if (index%2 == 0)
                        {
                            <div class="clearfix hidden-lg hidden-xs"></div>
                        }

                        else
                        {
                            <div class="clearfix hidden-lg hidden-md hidden-sm"></div>
                        }
                    }
                </div>
            </div>        
        }
    </div>
</div>
