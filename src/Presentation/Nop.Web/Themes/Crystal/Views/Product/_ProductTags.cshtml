@model IList<ProductTagModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="product-tags-box">
        <div class="title">
            <h4>@T("Products.Tags")</h4>
        </div>
        <div class="product-tags-list">
            
            <ul>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <li class="tag">
                        <a href="@Url.RouteUrl("ProductsByTag", new {productTagId = Model[i].Id, SeName = Model[i].SeName})" class="producttag">
                            <i class="fa fa-tag"></i>  @Model[i].Name <span>@T("Products.Tags.Count", Model[i].ProductCount)</span></a> </li>

                }
            </ul>
        </div>
    </div>

}