@model IList<ProductOverviewModel>

@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="product-grid bestsellers">
        <div class="title">
            <h2>@T("Bestsellers")</h2>
        </div>
        <div class="item-grid row">
            @foreach (var item in Model)
            {
                <div class="item-box col-md-4">
                    @Html.Partial("_ProductBox", item)
                </div>
            }
        </div>
    </div>
}